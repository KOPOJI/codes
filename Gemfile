gem 'coffee-rails', '~> 4.1.0' # Use CoffeeScript for .js.coffee assets and views
gem 'jquery-rails' # Use jquery as the JavaScript library

gem 'turbolinks'
gem 'jquery-turbolinks'

gem 'jbuilder', '~> 2.0'

gem 'prettyphoto-rails'

#syntax highlighter
gem 'ace-rails-ap'
gem 'rouge'
gem 'redcarpet'

gem 'carrierwave'

gem 'bb-ruby'

gem 'will_paginate'

gem 'mini_magick'

gem 'seed_dump'

gem 'simple_form'

#users
gem 'devise'
gem 'cancan'

