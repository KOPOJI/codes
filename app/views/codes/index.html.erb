<% description "#{app_name} &mdash; #{t('main_description')}" %>
<% keywords t 'main_keywords' %>

<% cache "index_#{locale}" do %>
  <div class="post">
    <div class="index-page">
      <div>
        <h1>SaveCode.RU</h1> - <%= t 'main_description' %>
      </div>
      <br><br><br>
      <%= t 'save_code_is_simple' %>:
      <br><br>

      <div class="example ">
        <%= link_to path_to_image('insert_code/insert_code_example.png') do %>
          <%= image_tag path_to_image('insert_code/preview/insert_code_example.png'), class: 'attach', alt: 'Написание кода' %>
        <% end %>

        <b> -> </b>
        <%= link_to path_to_image('insert_code/insert_code_example_2.png') do %>
          <%= image_tag path_to_image('insert_code/preview/insert_code_example_2.png'), class: 'attach', alt: 'Добавление кода' %>
        <% end %>

        <b> -> </b>
        <%= link_to path_to_image('insert_code/insert_attachment_example.png') do %>
          <%= image_tag path_to_image('insert_code/preview/insert_attachment_example.png'), class: 'attach', alt: 'Выбор кода и изображения' %>
        <% end %>

        <b> -> </b>
        <%= link_to path_to_image('insert_code/insert_attachment_example_2.png') do %>
          <%= image_tag path_to_image('insert_code/preview/insert_attachment_example_2.png'), class: 'attach', alt: 'Загрузка изображения' %>
        <% end %>

        <b> -> </b>
        <%= link_to path_to_image('insert_code/result.png') do %>
          <%= image_tag path_to_image('insert_code/preview/result.png'), class: 'attach', alt: 'Результат' %>
        <% end %>
      </div>
      <div>
        <br>
        <%= t 'try' %>
        <%= link_to t('try_code'), create_url(new_code_path), class: 'button link' %>
        <%= t 'or' %>
        <%= link_to t('try_attach'), create_url(new_attachment_path), class: 'button link' %>
      </div>
    </div>
  </div>
<% end %>