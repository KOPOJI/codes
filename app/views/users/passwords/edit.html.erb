<%= render '/users/form', start: true, header: t('Change your password') %>

<%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: {method: :put} do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token, class: 'form-input form-control' %>

    <div>
      <%= f.label :password, t('New password') %>
      <%= f.password_field :password, autofocus: true, class: 'form-input form-control' %>
    </div>

    <div>
      <%= f.label :password_confirmation, t('Confirm new password') %>
      <%= f.password_field :password_confirmation, class: 'form-input form-control' %>
    </div>

    <div><%= f.submit t('Change my password'), class: 'button btn btn-primary' %></div>
<% end %>

<%= render '/users/form', start: false %>
