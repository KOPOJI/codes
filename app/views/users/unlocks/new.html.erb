<% content_for :title, t('Password Recovery') %>
<% title t 'Password Recovery' %>
<% description t 'Password Recovery Form' %>
<% keywords t 'Password Recovery Form' %>

<%= render '/users/form', start: true, header: t('Resend unlock instructions') %>

<%= simple_form_for resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post} do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :email, t(:email) %>
      <br/>
      <%= f.email_field :email, autofocus: true %></div>

    <div><%= f.submit t('Resend unlock instructions'), class: 'button btn btn-primary' %></div>
<% end %>

<%= render '/users/form', start: false %>
